		<div class="wideblock" id="second">
			<div class="cbox">
				<div class="f-left blist">
				
				<h2>DJ Blogposts</h2>
			
				<% @blogs.each do |b| %>
                    <div class="oa">
                    	<% if b.picture? %>
                    	<div class="image-container" style="background-image: url(<%= b.picture%>)"></div>
                    	<% else %>
                    	<div class="image-container"></div>
                    	<% end %>
                        <h4><%= link_to b.title, b  %></h4>
                        <h5><%= link_to b.staff.name, b.staff  %>  - <%= time_ago_in_words(b.created_at) %> ago.</h5>
                        <p><%= truncate(b.content, length: 150)  %></p>
                    </div>
                <% end %>
				
				<div class="bframe" id="podcasts">
            		<h2> Podcasts </h2><hr>
	                <% @podcasts.each do |pod| %>
	                    <div style="background-image: url(<%= pod.image.picture if pod.image %>)"> 
	                        <h6><%= link_to pod.title, pod  %></h6>
	                    </div>
	                <% end %>
        		</div>
				
				
				</div>
				<div class="f-right">
					<a target="blank" href="http://www.kitchentheatre.org/"><img class="ad" src="/assets/ktclogo.jpg" width="300"></a>
					
				<div class="clog" id="events">
					<h3>Concert Log</h3>
					
					<% @events.each do |event| %>
			              <div>
			                  <div>
			                      <h1><%= event.date.to_formatted_s(:short)  %></h1>
			                  </div>
			                <h6><%= link_to event.name, event  %></h6>  
			                <p><%= event.location %></p>
			              </div>
			          <% end %>
					
					
				</div>
				<a target="blank" href="http://www.hangartheatre.org/"><img class="ad" src="/assets/hangar.jpg" width="300"></a>
				<div class="ad"></div>
				<img class="ebr" src="/assets/ebr.png" width="300"/>
				<div class="clog"><h3>Community Events</h3>
				
				<% @cevents.each do |event| %>
		              <div>
		                  <div>
		                      <h1><%= event.date.to_formatted_s(:short)  %></h1>
		                  </div>
		                <h6><%= link_to event.name, event  %></h6>  
		                <p><%= event.location %></p>
		              </div>
		          <% end %>
				
				</div>
				
				</div>
			</div>
