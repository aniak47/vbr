  <div class="row">
    
    <div class="col-sm-8">
      
      <div class="sec-head panel panel-default">
          <div class="panel-body">
              <h1>Podcast Shows</h1>
              <p>We have several shows bringing you great content...</p>
          </div>
      </div>
      <div class="wapper"> 
      <ul class="blogposts">
        <% @shows.each do |show| %>
          <li>
            <h2><%= link_to show.name, show %></h2>
            <% if logged_in? %>
            <%= link_to "edit", edit_show_path(show) %>
            <h6><%= show.description %></h6>
            <% end %>
          </li>
        <% end %>
      </ul>
      </div> 
    </div>
    
    <div class="col-sm-4">
      <p>This column is for adds and links to featured items</p>
    </div>
    
  </div>
