<h1>Podcasts#show</h1>

<li>
  <span class="content">
    <%= @podcast.title %>
    
<audio controls>
  <source src=<%= @podcast.audio.url %> type="audio/mp3">
  Your browser does not support the audio element.
</audio>

  </span>
   
  <span class="timestamp">
    Posted <%= time_ago_in_words(@podcast.created_at) %> ago.
    <% if current_staff?(@podcast.staff) %>
      <%= link_to "delete", @podcast, method: :delete,
                                       data: { confirm: "You sure?" } %>
      | <%= link_to "edit", edit_podcast_path(@podcast) %>
    <% end %>
  </span>
</li>
<% if @podcast.image %>

    <div><%= image_tag(@podcast.image.picture.url, width: 100) %></div>

<% end %>