  <div class="wapper">

    <div class="col-sm-8">
        <div class="wapper">
          <h1><%= @podcast.title %></h1>
          <span class="timestamp">
            Posted <%= time_ago_in_words(@podcast.created_at) %> ago by
            <%= @podcast.staff.name %>
            <% if current_staff?(@podcast.staff) %>
              | <%= link_to "delete", @podcast, method: :delete,
                               data: { confirm: "You sure?" } %>
              | <%= link_to "edit", edit_podcast_path(@podcast) %>
            <% end %>
          </span>
            <p>Genre: <%= @podcast.catergory %></p>
            <audio controls>
              <source src=<%= @podcast.audio.url %> type="audio/mp3">
              Your browser does not support the audio element.
            </audio>
            <hr>
            <% if @podcast.image %>
              <div class="f-right"><%= image_tag(@podcast.image.picture.url, width: 100) %></div>
            <% end %>
              
            
            <p><%= simple_format(@podcast.description) %></p>
         
         </div>
    </div>
    <div class="col-sm-4">
      <%= render 'shared/aside' %>
  </div>

</div>
