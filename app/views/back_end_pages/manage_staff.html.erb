<div class="wapper">

<h2> Activated Users (<%= @aa.size %>)</h2>


<% @aa.each do |s| %>
    <hr>
    <h5><%= s.name %></h5>
    <p><%= s.email %></p>
        <% if logged_in? && current_staff.admin? && !current_staff?(s) %>
            <%= link_to "delete |", s, method: :delete,
                                      data: { confirm: "You sure?" } %>
            <%= link_to "edit", edit_staff_path(s) %>
            <%= link_to "| Make Admin", make_admin_staff_path(s), method: :put if !s.admin? %>
        <% end %>
        
<% end %>




<h2> Unactivated Users  (<%= @in.size %>)</h2>


<% @in.each do |s| %>
<hr>
    <p><%= s.email %></p>
      <% if logged_in? && current_staff.admin? && !current_staff?(s) %>
    | <%= link_to "delete", s, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
<% end %>
</div>
