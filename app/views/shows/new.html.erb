<section class="blogpost_form">
      
  <%= form_for(@show, :html => {:multipart => true}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.label :catergory %>
    <%= f.select :catergory, options_for_select([["specialty"], ["podcast"]]), class: 'form-control' %>
    
    <p> Select DJs affiliaed with this show</p>
    <% staff = Staff.all.map { |s| [s.name, s.id] } %>
    <% staff << ["Select DJ", 0] %>
    <% 3.times do %>
      <%= select_tag(name="choice[]", options_for_select(staff, 0)) %>
    <% end %>
    
        Images:
      <ul>
        <%= f.fields_for :images do |builder| %>
          <%= render "images/image_fields", :f => builder %>
        <% end %>
      </ul>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 20, class: 'form-control' %>

      <%= f.label :day %>
      <%= f.text_field :day, class: 'form-control' %>
      
      <%= f.label :start %>
      <%= f.time_field :start, class: 'form-control' %>
      
      <%= f.label :end %>
      <%= f.time_field :end, class: 'form-control' %>


      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  
  </section>