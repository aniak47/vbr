<h1>This is the staff profile page</h1>

<% provide(:title, @staff.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">

      <h1>
        <%= gravatar_for @staff %>
        <%= @staff.name %>
      </h1>
    </section>
  </aside>
<div class="col-md-8">
    <% if @staff.blogposts.any? %>
      <h3>Blogposts (<%= @staff.blogposts.count %>)</h3>
      <ol class="blogposts">
        <%= render @blogposts %>
      </ol>
      <%= will_paginate @blogposts %>
    <% end %>
  </div>